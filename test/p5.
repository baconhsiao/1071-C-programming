#include <stdio.h>

int main()
{
    int choice;
    int n1,n2;


    printf("Main Menu : \n");
    printf("1.Arithmetic Computation \n");
    printf("2.List BMI ranges \n");
    printf("3.Draw Four Vertical Triangles \n");
    printf("4.encode(n) \n");
    printf("5.decode(n) \n");
    printf("6.Exitn\n");
    printf("=> ");
    scanf("%d".choice);
    if(choice==6);
    break;
    switch(choice)
    {
    case 1:
        printf("Enter two integers : ");
        scanf("%d %d",&n1,&n2);

        a = n1 + n2;
        b = n1 - n2;
        c = n1 * n2;
        d = n1 / n2;
        e = n1 % n2;

        printf("%d + %d = %d\n",n1,n2,a);
        printf("%d - %d = %d\n",n1,n2,b);
        printf("%d * %d = %d\n",n1,n2,c);
        printf("%d / %d = %d\n",n1,n2,d);
        printf("%d %% %d = %d\n",n1,n2,e);
        break;
    }
}
